<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Contact_usActivity"
    android:orientation="vertical"
    android:background="@drawable/background_shape">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/contact_us"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="20sp"
        android:textColor="#0273A6"
        android:fontFamily="@font/aclonica" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        app:cardBackgroundColor="#0003A9F4"
        app:cardCornerRadius="16sp"
        app:cardElevation="16sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0003A9F4"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="16sp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center"
                android:layout_margin="16sp"
                android:background="@drawable/edtext_shape"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/con" />

            <EditText
                android:id="@+id/et_contactus_mobile_no"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:layout_margin="20sp"
                android:background="@drawable/edtext_shape"
                android:drawableStart="@drawable/phone_icon"
                android:paddingStart="12sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="@string/enter_your_phone_number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="#0177AC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:autofillHints="" />

            <EditText
                android:id="@+id/et_contactus_mobile_no2"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:layout_margin="20sp"
                android:paddingStart="12sp"
                android:background="@drawable/edtext_shape"
                android:drawableStart="@drawable/phone_icon"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="@string/enter_your_phone_number"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textColorHint="#0177AC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:autofillHints="" />

            <EditText
                android:id="@+id/et_contactus_message"
                android:layout_width="300sp"
                android:layout_height="100sp"
                android:layout_margin="16sp"
                android:background="@drawable/edtext_shape"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="@string/enter_your_message"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#056793"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_contactus_send"
                android:layout_width="170sp"
                android:layout_height="60sp"
                android:layout_margin="16sp"
                android:text="@string/send"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#9C03A9F4"
                android:fontFamily="@font/aclonica"/>

        </LinearLayout>

     </androidx.cardview.widget.CardView>

</LinearLayout>