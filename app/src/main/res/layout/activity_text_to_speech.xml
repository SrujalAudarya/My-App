<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@drawable/background_shape"
    tools:context=".Text_To_SpeechActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:layout_margin="16sp"
        android:src="@drawable/text_to_speech" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        app:cardCornerRadius="16sp"
        app:cardElevation="16sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/cardview_shape" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_to_speech"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/aclonica"
                android:textColor="#03467C"
                android:gravity="center"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:id="@+id/et_text_speech_enter_your_text"
        android:hint="@string/enter_your_text"
        android:textColorHint="#056793"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="@drawable/text_speech_shape"
        android:layout_margin="18sp"
        android:textAlignment="center"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_the_pitch"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#03467C"
        android:layout_margin="16sp" />

    <SeekBar
        android:id="@+id/sb_text_speech_pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:max="100"
        android:min="0"
        android:progressBackgroundTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimaryDark"
        android:progress="50" />

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_the_speed"
        android:textSize="18sp"
        android:textStyle="bold"
         android:gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#03467C"
        android:layout_margin="16sp" />

    <SeekBar
        android:id="@+id/sb_text_speech_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:max="100"
        android:min="0"
        android:progressBackgroundTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimaryDark"
        android:progress="50" />

            <Button
                android:id="@+id/btn_text_speech_speak"
                android:layout_width="170sp"
                android:layout_height="60sp"
                android:layout_margin="20sp"
                android:text="@string/speak"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#9C03A9F4"
                android:textColor="#A1CEF1"
                android:fontFamily="@font/aclonica"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


</LinearLayout>